# ===========================================
# Ban Sai Yai - Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# Application Profile
SPRING_PROFILES_ACTIVE=dev

# Server Configuration
SERVER_PORT=9090

# Database Configuration
DB_URL=jdbc:mariadb://localhost:3306/ban_sai_yai?useSSL=false&allowPublicKeyRetrieval=true
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JPA Configuration
DDL_AUTO=update
SHOW_SQL=false

# JWT Configuration
JWT_SECRET=your-secret-key-for-jwt-token-generation-must-be-at-least-256-bits-long
JWT_EXPIRATION=900000
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Rate Limiting / Account Locking Configuration
# Set to false to disable account locking after failed attempts
AUTH_ACCOUNT_LOCK_ENABLED=true
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
AUTH_RATE_LIMIT_WINDOW_MINUTES=15
AUTH_RATE_LIMIT_LOCKOUT_MINUTES=15

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB
UPLOAD_LOCATION=/opt/bansaiyai/uploads

# Redis Cache Configuration (optional)
CACHE_TYPE=none
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
